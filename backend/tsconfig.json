{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "allowJs": false,
        "skipLibCheck": true
    },
    "include": [
        "src/game-service",
        "src/score-service",
        "vitest.config.ts",
    ]
}
